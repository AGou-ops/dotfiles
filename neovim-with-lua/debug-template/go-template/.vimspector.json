{
    "configurations": {
        "run": {
            "adapter": "delve",
            "tty": true,
            "filetypes": [ "go" ], 
            "variables": {
                "dlvFlags": "--check-go-version=false"
            },
            "configuration": {
                "request": "launch",
                "program": "${fileDirname}",
                "mode": "debug"
            }
        }
    }
}
